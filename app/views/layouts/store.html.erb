<!DOCTYPE html>
<html>
  <head>
    <title>Open Wholesale Platform</title>
    <%= csrf_meta_tags %>
    <meta name="turbolinks-cache-control" content="no-cache">

    <%= stylesheet_link_tag    'store', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'store', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="<%= controller_path.split('/').join(' ') %> <%= action_name %>">
    <div class="uk-offcanvas-content">
      <%= render 'header' %>
      <div class="uk-container uk-margin">
        <%= render_breadcrumbs %>
        <%= yield %>
      </div>
      <%= render 'offcanvas' %>
    </div>
  </body>
</html>
