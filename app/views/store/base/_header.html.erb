<!-- Main Nav -->
<div class="uk-navbar-container">
  <div class="uk-container uk-container-expand">
    <nav class="uk-navbar">
      <div class="uk-navbar-left">
        <%= link_to current_business.name, dashboard_path, class: 'uk-navbar-item uk-logo' %>
      </div>
      <div class="uk-navbar-right">
        <ul class="uk-navbar-nav uk-visible@m">
          <li><a href="#" data-turbolinks="false"><i class="fa fa-bell-o fa-lg"></i></a></li>
          <li>
            <a href="#">
              <i class="fa fa-user-circle fa-lg"></i>
              <span class="owp-padding-lr-small uk-text-capitalize"><%= current_user.full_name %></span>
              <i class="fa fa-angle-down"></i>
            </a>
            <div class="uk-navbar-dropdown" uk-drop="align: right; mode: click; animation: uk-animation-slide-top-small;">
              <ul class="uk-nav uk-navbar-dropdown-nav">
                <li><a href="#">Settings</a></li>
                <li><%= link_to t('nav.billing'), billing_path %></li>
                <li class="uk-nav-divider"></li>
