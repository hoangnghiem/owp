  <ul class="uk-subnav owp-subnav" uk-margin>
    <li>
      <%= link_to dashboard_path do %>
        <i class="fa fa-home"></i> <span class="owp-subnav-text"><%= t('nav.dashboard') %></span>
      <% end %>
    </li>
    <li>
      <a href="#" data-turbolinks="false"><i class="fa fa-th"></i> <span class="owp-subnav-text"><%= t('nav.inventory') %></span> <span uk-icon="icon:  triangle-down"></span></a>
      <div uk-dropdown="mode: click; animation: uk-animation-slide-top-small;">
        <ul class="uk-nav uk-dropdown-nav">
          <li><%= link_to t('nav.products'), products_path %></li>
          <li><a href="#">Categories</a></li>
          <li><a href="#">Suppliers</a></li>
