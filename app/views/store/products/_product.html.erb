<tr class="meta-root">
  <td class="thumb" rowspan="4"><%= image_tag "https://placeimg.com/100/100/any", class: 'uk-preserve-width' %></td>
  <td class="title" colspan="3">Product name</td>
</tr>
<!-- variants -->
<% 3.times do |x| %>
<tr class="meta-sub <%= 'last' if x == 2 %>">
  <td>Red</td>
  <td>10$</td>
  <td>5</td>
</tr>
<% end %>
