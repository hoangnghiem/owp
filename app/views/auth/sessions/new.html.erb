<div class="uk-card uk-card-default uk-width-1-2@s uk-width-1-3@m">
  <div class="uk-card-body">
    <div class="uk-text-center">
      <span uk-icon="icon: sign-in; ratio: 2.2"></span>
    </div>
    <h3 class="uk-text-uppercase uk-text-center uk-margin-small-top">Sign In</h3>

    <%= render 'flash_messages' %>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean, input_html: {class: 'uk-checkbox'} if devise_mapping.rememberable? %>
        <%= f.button :submit, "Log in", class: 'uk-width-1-1' %>
    <% end %>
  </div>
  <div class="uk-card-footer uk-background-muted">
    <a href="#" class="uk-button uk-button-text">Read more</a>
  </div>
</div>
